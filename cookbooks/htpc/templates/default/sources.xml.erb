<sources>
    <%- ["programs", "video", "music", "pictures", "files"].each do |category_name| %>
      <<%= category_name %>>
        <default pathversion="1"></default>
        <%- node["xbmc"]["sources"][category_name].each do |name, source| %>
          <source>
              <name><%= name %></name>
              <path pathversion="1"><%= source["path"] %></path>
          </source>
        <%- end %>
      </<%= category_name %>>
    <%- end %>
</sources>
